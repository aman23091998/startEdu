<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <ProgressBar
        android:id="@+id/progressBar_feed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:max="100"
        android:minHeight="20dp"
        android:minWidth="20dp" />

    <TextView
        android:id="@+id/feed_dialog_text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@+id/progressBar_feed"
        android:gravity="center"
        android:text=" Inviting Friend "
        android:textStyle="bold" />

    <Button
        android:id="@+id/feedDialogConfirm1"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/progressBar_feed"
        android:layout_marginRight="40dp"
        android:text="Continue"
        android:visibility="visible" />
    <Button
        android:id="@+id/feedDialogConfirm2"
        style="@android:style/Widget.Material.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/feed_dialog_text"
        android:layout_marginRight="40dp"
        android:text=" OK "
        android:visibility="gone" />
</RelativeLayout>
